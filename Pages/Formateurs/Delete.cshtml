@page
@model LearnHubBO.Pages.Formateurs.DeleteModel

@{
    ViewData["Title"] = "Supprimer un formateur";
}

<h1>Supprimer un formateur</h1>

<h3>Êtes-vous sûr de vouloir supprimer ceci ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nom
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Formateur.NomFormateur)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Formateur.Email)
        </dd>
    </dl>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="text-danger">
            @TempData["ErrorMessage"]
        </div>
        <br />
    }
    <form method="post">
        <input type="hidden" asp-for="Formateur.IdFormateur" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-page="./Index">Retour à la liste des formateurs</a>
    </form>
</div>
