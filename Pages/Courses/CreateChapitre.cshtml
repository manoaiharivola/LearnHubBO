@page
@model LearnHubBO.Pages.Courses.CreateChapitreModel
@{
}

@{
    ViewData["Title"] = "Créer Chapitre";
}

<h1>Nouveau chapitre du cours @Model.Cours.TitreCours</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Chapitre.TitreChapitre" class="control-label">Titre</label>
                <input asp-for="Chapitre.TitreChapitre" class="form-control" />
                <span asp-validation-for="Chapitre.TitreChapitre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chapitre.Ordre" class="control-label">Numero du chapitre</label>
                <input asp-for="Chapitre.Ordre" type="number" class="form-control" min="1" placeholder="1" value="1" />
                <span asp-validation-for="Chapitre.Ordre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chapitre.Contenu" class="control-label">Contenu</label>
                <textarea id="tiny" asp-for="Chapitre.Contenu" class="form-control" style="width:1000px;"></textarea>
                <span asp-validation-for="Chapitre.Contenu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Chapitre.IdCours" class="form-control" hidden value="@Model.Cours.IdCours" />
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Chapitres" asp-route-id="@Model.Cours.IdCours">Retour à la liste des chapitres</a>
</div>
