@page
@model LearnHubBO.Pages.Courses.IndexModel

@{
    ViewData["Title"] = "Liste de vos cours";
}

<h1>Liste de vos cours</h1>

<p>
    <a asp-page="Create">Créer Nouveau</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Titre
            </th>
            <th>
                Catégorie
            </th>
            <th>
                Formateur
            </th>
            <th>
                Date de création
            </th>
            <th>
               Date de dernière modification
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cours)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TitreCours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CoursCategorie.NomCoursCategorie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Formateur.NomFormateur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreationCours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateModificationCours)
                </td>
                <td>
                    <a asp-page="./Chapitres" asp-route-id="@item.IdCours">Chapitres</a> |
                    <a asp-page="./Edit" asp-route-id="@item.IdCours">Modifier</a> |
                    <a asp-page="./Details" asp-route-id="@item.IdCours">Détails</a> |
                    <a asp-page="./Delete" asp-route-id="@item.IdCours">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
