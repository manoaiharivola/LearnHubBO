@page
@model LearnHubBO.Pages.Courses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cours</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cours.IdCours" />
            <div class="form-group">
                <label asp-for="Cours.TitreCours" class="control-label"></label>
                <input asp-for="Cours.TitreCours" class="form-control" />
                <span asp-validation-for="Cours.TitreCours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cours.IdFormateur" class="control-label"></label>
                <select asp-for="Cours.IdFormateur" class="form-control" asp-items="ViewBag.IdFormateur"></select>
                <span asp-validation-for="Cours.IdFormateur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cours.IdCoursCategorie" class="control-label"></label>
                <select asp-for="Cours.IdCoursCategorie" class="form-control" asp-items="ViewBag.IdCoursCategorie"></select>
                <span asp-validation-for="Cours.IdCoursCategorie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
