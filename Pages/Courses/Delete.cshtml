@page
@model LearnHubBO.Pages.Courses.DeleteModel

@{
    ViewData["Title"] = "Supprimer un cours";
}

<h1>Supprimer un cours</h1>

<h3>Êtes-vous sûr de vouloir supprimer ceci ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Titre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cours.TitreCours)
        </dd>
        <dt class="col-sm-2">
            Formateur
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cours.Formateur.NomFormateur)
        </dd>
        <dt class="col-sm-2">
            Catégorie
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cours.CoursCategorie.NomCoursCategorie)
        </dd>
        <dt class="col-sm-2">
            Date de création
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cours.DateCreationCours)
        </dd>
        <dt class="col-sm-2">
            Date de modification
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cours.DateModificationCours)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <p>
        <dd class="col-sm-10" style="width: 1000px; background-color: white; border-radius: 10px; border-style: solid; border-width: 2px; border-color: #eeeeee; padding: 20px; overflow-x: auto;">
                @Html.Raw(Model.Cours.Description)
        </dd>
        </p>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Cours.IdCours" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-page="./Index">Retour à la liste de vos cours</a>
    </form>
</div>
